<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/friend_wall_pic"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_bg_head"/>

    <ImageView
        android:id="@+id/friend_avatar"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:padding="3dp"
        android:background="@drawable/avatar_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/img_head"
        android:layout_alignBottom="@id/friend_wall_pic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-28dp"/>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/message_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/friend_avatar"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/message_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_head"/>

        <TextView
            android:id="@+id/message_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="1条新消息"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>